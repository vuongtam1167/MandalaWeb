@model MandalaApp.Models.Mandala

@{
    ViewData["Title"] = "Create Mandala";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Create Mandala</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreateMandala", "CreateMandala", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Mandala Name" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <!-- Input cho Target: Đây là mục tiêu chính của Mandala -->
                        <div class="form-group mb-3">
                            <label for="Target" class="form-label">Mục Tiêu Chính</label>
                            <input type="text" name="Target" id="Target" class="form-control" placeholder="Mục Tiêu Chính" />
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>